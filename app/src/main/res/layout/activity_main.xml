<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xch.im.definetest.activity.MainActivity">

    <Button
        android:id="@+id/main_btn_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="自定义按钮动画"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/main_btn_test"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="自定义练习"
        app:layout_constraintLeft_toLeftOf="@+id/main_btn_button"
        app:layout_constraintRight_toRightOf="@+id/main_btn_button"
        app:layout_constraintTop_toBottomOf="@+id/main_btn_button" />


    <Button
        android:id="@+id/main_btn_percent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="饼状图"
        app:layout_constraintLeft_toLeftOf="@+id/main_btn_button"
        app:layout_constraintRight_toRightOf="@+id/main_btn_button"
        app:layout_constraintTop_toBottomOf="@+id/main_btn_test" />


    <Button
        android:id="@+id/main_btn_canvas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Canvas练习"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="@+id/main_btn_button"
        app:layout_constraintRight_toRightOf="@+id/main_btn_button"
        app:layout_constraintTop_toBottomOf="@+id/main_btn_percent" />
</android.support.constraint.ConstraintLayout>
